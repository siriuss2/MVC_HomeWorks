@model List<PizzaViewModel>

<h2>List of pizzas:</h2>
<br />

<div class="card-container">

    @foreach (var pizza in @Model)
    {

        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Name : @pizza.Name</h5>
                @if (pizza.HasExtras)
                {
                    <p class="card-text">Price : @(pizza.Price + 10)</p>
                }
                else
                {
                    <p class="card-text">Price : @pizza.Price</p>
                }
                @foreach(var size in pizza.PizzaSizes)
                {
                    <p>@size</p>
                }
            </div>
            <br />
        </div>

    }
</div>